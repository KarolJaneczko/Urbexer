<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Urbexer.Views.HomePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:Urbexer.Models"
    xmlns:viewmodels="clr-namespace:Urbexer.ViewModels"
    xmlns:xct="clr-namespace:Xamarin.CommunityToolkit.UI.Views;assembly=Xamarin.CommunityToolkit"
    Title="Strona główna">

    <ScrollView>
        <ScrollView.Background>
            <LinearGradientBrush>
                <GradientStopCollection>
                    <GradientStop Offset="0" Color="#161616" />
                    <GradientStop Offset="1" Color="#363636" />
                </GradientStopCollection>
            </LinearGradientBrush>
        </ScrollView.Background>


        <Grid RowDefinitions="Auto,480,Auto,Auto">
            <Grid Grid.Row="0" HeightRequest="100">
                <Path
                    Aspect="Fill"
                    Data="M0,0H375V129.651s-9.025,2.382-55.426-5.3-70.141-41.09-130.3-41.176-83.544,33.5-130.893,41.176S0,129.651,0,129.651Z"
                    Fill="#BF0603" />
                <StackLayout
                    Margin="10"
                    Orientation="Horizontal"
                    Spacing="10"
                    VerticalOptions="Center">
                    <Grid HorizontalOptions="EndAndExpand">
                        <Label
                            Grid.Row="0"
                            Grid.Column="5"
                            Grid.ColumnSpan="2"
                            FontAttributes="Bold"
                            FontFamily="Bebas"
                            FontSize="Small"
                            HorizontalOptions="EndAndExpand"
                            Text="NAJBLIŻSZE  LOKACJE"
                            TextColor="White"
                            VerticalOptions="EndAndExpand" />
                        <Image
                            Grid.Row="1"
                            Grid.Column="6"
                            HeightRequest="50"
                            HorizontalOptions="EndAndExpand"
                            Source="swipe_icon"
                            VerticalOptions="EndAndExpand"
                            WidthRequest="50" />
                    </Grid>
                </StackLayout>
                <Grid
                    Margin="0,0,0,0"
                    HeightRequest="90"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    WidthRequest="90">
                    <Ellipse
                        Margin="10"
                        Aspect="Fill"
                        Stroke="White"
                        StrokeThickness="2" />
                    <Image
                        HeightRequest="55"
                        HorizontalOptions="Center"
                        Source="app_logo.png"
                        VerticalOptions="Center"
                        WidthRequest="55" />
                </Grid>
            </Grid>
            <CollectionView
                Grid.Row="1"
                Margin="0,0,0,0"
                FlowDirection="LeftToRight"
                HorizontalOptions="Start"
                ItemsLayout="HorizontalList"
                ItemsSource="{Binding Locations}"
                SelectionChanged="CollectionView_SelectionChanged"
                SelectionMode="Single"
                VerticalOptions="StartAndExpand">
                <CollectionView.EmptyView>
                    <Frame BackgroundColor="White" CornerRadius="25">
                        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                            <Label Text="Wczytywanie lokacji..." />
                            <ActivityIndicator HeightRequest="100" IsRunning="True" Color="Black"/>
                        </StackLayout>
                    </Frame>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Frame
                                Margin="10,0"
                                Padding="2"
                                CornerRadius="20"
                                HeightRequest="500"
                                VerticalOptions="StartAndExpand"
                                WidthRequest="200">
                                <StackLayout x:DataType="models:Location">
                                    <Frame
                                        Margin="10"
                                        Padding="0"
                                        CornerRadius="20">
                                        <Image
                                            Aspect="AspectFill"
                                            HeightRequest="170"
                                            Source="{Binding Thumbnail}"
                                            VerticalOptions="Center" />
                                    </Frame>
                                    <Label
                                        Margin="5,0,0,0"
                                        FontFamily="Bebas"
                                        FontSize="Large"
                                        Text="{Binding Name}"
                                        TextColor="#BF0603"
                                        VerticalOptions="Start" />
                                    <BoxView
                                        Margin="5,0,40,0"
                                        HeightRequest="1"
                                        VerticalOptions="Start"
                                        Color="Black" />
                                    <Label
                                        Margin="10,0,0,0"
                                        FontSize="Medium"
                                        Text="{Binding Address}"
                                        TextColor="Black"
                                        VerticalOptions="Fill" />

                                    <StackLayout
                                        Margin="10,5"
                                        Orientation="Horizontal"
                                        VerticalOptions="EndAndExpand">
                                        <StackLayout HorizontalOptions="StartAndExpand">


                                            <Label
                                                FontFamily="Bebas"
                                                FontSize="Large"
                                                Text="{Binding Path=Distance, StringFormat='{0} km'}"
                                                VerticalOptions="End" />
                                            <Frame
                                                Margin="-5,-5"
                                                Padding="3"
                                                CornerRadius="10"
                                                HeightRequest="20">
                                                <StackLayout Orientation="Horizontal">
                                                    <Image Margin="-2" Source="odwiedzone_icon" />
                                                    <BoxView WidthRequest="1" Color="#363636" />
                                                    <Image IsVisible="{Binding IsVisited}" Source="true_icon.png" />
                                                    <Image IsVisible="{Binding IsNotVisited}" Source="false_icon.png" />
                                                </StackLayout>
                                            </Frame>
                                        </StackLayout>
                                        <Frame
                                            Padding="5"
                                            BackgroundColor="White"
                                            CornerRadius="20"
                                            HasShadow="True"
                                            HorizontalOptions="End"
                                            VerticalOptions="Center">
                                            <Image
                                                HeightRequest="45"
                                                Source="{Binding CategoryIconPath}"
                                                WidthRequest="45" />
                                        </Frame>
                                    </StackLayout>
                                </StackLayout>
                            </Frame>
                            <BoxView HeightRequest="1" VerticalOptions="End" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Frame Grid.Row="2" BackgroundColor="#BF0603">
                <Label
                    FontFamily="Bebas"
                    FontSize="Title"
                    HorizontalOptions="CenterAndExpand"
                    Text="Baza wiedzy"
                    TextColor="White" />
            </Frame>

            <StackLayout
                x:Name="MyStackList"
                Grid.Row="3"
                Margin="0,10,0,70"
                BindableLayout.ItemsSource="{Binding Questions}"
                Spacing="3"
                VerticalOptions="FillAndExpand">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Margin="10,2"
                            Padding="5"
                            BackgroundColor="white"
                            BorderColor="Gray"
                            CornerRadius="8"
                            HasShadow="False"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="StartAndExpand">
                            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                <xct:Expander x:Name="MainExpander" ExpandAnimationLength="500">
                                    <xct:Expander.Header>
                                        <StackLayout Orientation="Horizontal">
                                            <Frame Padding="5" BackgroundColor="#BF0603">
                                                <Image
                                                    HeightRequest="35"
                                                    Source="{Binding ImageIcon}"
                                                    WidthRequest="35" />
                                            </Frame>
                                            <Label
                                                FontAttributes="Bold"
                                                FontFamily="Bebas"
                                                FontSize="Large"
                                                HorizontalOptions="FillAndExpand"
                                                Text="{Binding Title}"
                                                TextColor="Black"
                                                VerticalOptions="Center" />
                                            <Image
                                                Grid.Column="3"
                                                HeightRequest="35"
                                                HorizontalOptions="End"
                                                Source="expand_icon.png"
                                                VerticalOptions="CenterAndExpand">
                                                <Image.Triggers>
                                                    <DataTrigger
                                                        Binding="{Binding Source={RelativeSource AncestorType={x:Type xct:Expander}}, Path=IsExpanded}"
                                                        TargetType="Image"
                                                        Value="True">
                                                        <Setter Property="Source" Value="collapse_icon.png" />
                                                    </DataTrigger>
                                                </Image.Triggers>
                                            </Image>
                                        </StackLayout>
                                    </xct:Expander.Header>
                                    <Grid>
                                        <StackLayout
                                            x:Name="TextDetailsView"
                                            Padding="10"
                                            BackgroundColor="White"
                                            HorizontalOptions="StartAndExpand"
                                            VerticalOptions="StartAndExpand">
                                            <Frame Padding="5">
                                                <Image Aspect="AspectFill" Source="{Binding BackgroundSource}" />
                                            </Frame>
                                            <Label
                                                FontSize="Medium"
                                                Opacity="0.85"
                                                Text="{Binding BodyDescription}"
                                                TextColor="Black" />
                                        </StackLayout>
                                    </Grid>
                                </xct:Expander>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>

        </Grid>
    </ScrollView>
</ContentPage>