                            <Frame Style="{StaticResource UserInfoStyle}">           
                </Frame>
            </StackLayout>-->

            <ListView BackgroundColor="white" 
                  IsEnabled="True"
                  x:Name="UserInfoList" 
                  ItemsSource="{Binding Informations}" 
                  SeparatorVisibility="Default"
                  Grid.Row="3"
                  HeightRequest="300"
                  Margin="20,0" 
                  VerticalOptions="Fill"
                  HorizontalOptions="Fill">
                <ListView.ItemTemplate>
                    <DataTemplate >
                        <ViewCell>
                            <Frame BackgroundColor="White" 
                               Padding="3"
                               Margin="0,0,0,0"
                               HasShadow="True"
                               HeightRequest="80">
                                <Grid HeightRequest="80"
                                  HorizontalOptions="FillAndExpand"
                                  VerticalOptions="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" 
                                       Text="{Binding Category}" 
                                       TextColor="black" 
                                       FontSize="14"
                                           FontAttributes="Bold"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Start" 
                                       Margin="10,0"/>
                                    <Label Grid.Column="1" 
                                       Text="{Binding Info}" 
                                       TextColor="#BF0603"
                                       FontAttributes="Bold" 
                                       FontSize="18" 
                                       VerticalOptions="Center"
                                       HorizontalOptions="End"
                                       Margin="20,0"/>
                                </Grid>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


        </Grid>
    </ScrollView>

</ContentPage>
