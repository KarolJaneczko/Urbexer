<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Urbexer.Views.LocationListPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:Urbexer.Models"
    xmlns:viewmodels="clr-namespace:Urbexer.ViewModels"
    Title="Lista pobliskich lokacji"
    x:DataType="viewmodels:LocationListViewModel">

    <!--  Strona wyświetlające karty lokacji w liście.  -->

    <!--  Nieudane próby wsadzenia pola wyszukiwania do paska nawigacji  -->
    <NavigationPage.TitleView>
        <StackLayout
            HeightRequest="100"
            Orientation="Horizontal"
            WidthRequest="100">
            <Slider HeightRequest="100" WidthRequest="300" />
        </StackLayout>
    </NavigationPage.TitleView>

    <ContentPage.BindingContext>
        <viewmodels:LocationListViewModel />
    </ContentPage.BindingContext>

    <StackLayout>
        <SearchBar
            x:Name="SearchBar"
            Margin="5"
            Background="White"
            HorizontalOptions="Fill"
            IsVisible="false"
            SearchCommand="{Binding FilterLocationsByNameCommand}"
            SearchCommandParameter="{Binding Source={x:Reference SearchBar}, Path=Text}" />
        <CollectionView
            x:Name="CollectionView"
            BackgroundColor="LightGray"
            EmptyView="Wczytywanie lokacji"
            HorizontalOptions="End"
            ItemsSource="{Binding LocationsFiltered}"
            RemainingItemsThreshold="5"
            RemainingItemsThresholdReachedCommand="{Binding LoadMoreCommand}"
            SelectionChanged="CollectionView_SelectionChanged"
            SelectionMode="Single"
            VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Frame 
                            Margin="1"
                            Padding="3"
                            MinimumHeightRequest="100" 
                            VerticalOptions="FillAndExpand"
                            HorizontalOptions="FillAndExpand">
                            <StackLayout x:DataType="models:Location" Orientation="Horizontal">
                                <Frame Padding="1">
                                    <Image  WidthRequest="100" HeightRequest="100"
                                    HorizontalOptions="Start"
                                    Aspect="AspectFill"
                                    Source="{Binding Thumbnail}" />
                                </Frame>
                                <StackLayout  HorizontalOptions="FillAndExpand">
                                    <Label Text="{Binding Name}" VerticalOptions="Start"  FontFamily="Bebas" FontSize="Medium" TextColor="#BF0603"/> 
                                    <BoxView HeightRequest="1" Color="#363636" Margin="0,-5,40,0" HorizontalOptions="FillAndExpand"/>
                                    <Label Text="{Binding Address}" VerticalOptions="Start" FontFamily="Opis" TextColor="Black"/>
                                    </StackLayout>
                                <StackLayout Margin="10,5,10,5">
                                <Label HorizontalOptions="End"
                                    MinimumWidthRequest="100"
                                    FontFamily="Bebas"
                                    FontSize="Large"
                                    Text="{Binding Path=Distance, StringFormat='{0} km'}"
                                    VerticalOptions="End" />
                                <Image VerticalOptions="EndAndExpand"
                                        HeightRequest="45"
                                        Opacity="0.4"
                                        Source="{Binding CategoryIconPath}"/>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                        <BoxView HeightRequest="1" VerticalOptions="End" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>